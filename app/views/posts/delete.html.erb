<h1>Posts#delete</h1>
<%= form_for(@post, :method => 'delete') do |f| %>
<p>Are you sure you want to delete this post?</p>
  <div>
    <table>
        <tr>
            <th>Track</th>
            <td><%= f.object.track %></td>
        </tr>
        <tr>
            <th>Car</th>
            <td><%= f.object.car %></td>
        </tr>
        <tr>
            <th>Lap Time</th>
            <td><%= f.object.lap_time %></td>
        </tr>
        <tr>
            <th>Tyre</th>
            <td><%= f.object.tyre %></td>
        </tr>
        <tr>
            <th>Weather</th>
            <td><%= f.object.weather %></td>
        </tr>
        <tr>
            <th>Event Time and Date</th>
            <td><%= f.object.event_time_date %></td>
        </tr>
        <tr>
            <th>Name</th>
            <td><%= f.object.name %></td>
        </tr>
    </table>
    <%= f.submit('Delete Post')%>
  </div>
  <% end %>

<%= link_to('Back to Posts', posts_path) %>
