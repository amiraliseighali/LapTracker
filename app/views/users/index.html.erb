<h1>Users</h1>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td> <%= user.username %></td>
      <td> <%= user.email %></td>
      <td> <%= user.created_at %></td>
      <td> <%= user.updated_at %></td>
      <td>
          <%= link_to( edit_user_path(user) , :class => 'action edit') do %><i class="glyphicon glyphicon-pencil"></i> <% end %> 
          <%= link_to( delete_user_path(user), :class => 'action delete') do %><i class="glyphicon glyphicon-trash"></i> <% end %>
      </td>

    </tr>
  <% end %>
</table>
